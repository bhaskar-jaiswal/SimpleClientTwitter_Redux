<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.codepath.apps.simpleclienttwitter.activity.FeaturesActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/composeToolbar"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:minHeight="?attr/actionBarSize">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

        <ImageView
            android:id="@+id/ivUpArrow"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_centerVertical="true"
            android:src="@mipmap/ic_up_arrow_blue"
            tools:src="@mipmap/ic_up_arrow_blue"/>

        <TextView
            android:id="@+id/tvFollow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="35dp"
            android:textSize="15sp"
            android:textColor="@android:color/black"
            android:textStyle="bold"
            tools:text="Tweet"/>
        </LinearLayout>

    </android.support.v7.widget.Toolbar>

    <View
        android:id="@+id/vLine_separator0"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_below="@+id/composeToolbar"
        android:background="#AAB8C2" />

    <FrameLayout
        android:id="@+id/flFeaturesContainer"
        android:layout_below="@+id/vLine_separator0"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"></FrameLayout>

</RelativeLayout>
